{
	"manifest_version":2,
	"name":"ToSTE",
	"version":"1.0",
	"description":"Interprets a Terms of Service webpage",
	"icons":{
		"48":"icons/toste-48.jpg"
	},
	"permissions": [
		"activeTab"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content_scripts/toste.js"],
			"css" : ["content_scripts/toste_styles.css"]
		}
	],
	"background":{
		"scripts":["content_scripts/background.js"]
	},
	"browser_action": {
		"default_icon": "icons/toste-32.jpg",
		"default_title": "ToSTE",
		"default_popup": "popup/toste_start.html"
	},
	"web_accessible_resources": [
		"popup/img/toste_logo.png"
	]
}